    # Remove rows where passenger count or trip distance is zero
    df = df[(df['passenger_count'] > 0) & (df['trip_distance'] > 0)]
    
    # Create new column lpep_pickup_date
    df['lpep_pickup_date'] = df['lpep_pickup_datetime'].dt.date
    
    # Rename columns to snake case
    df = df.rename(columns=lambda x: x.lower())
    df = df.rename(columns={'vendorid': 'vendor_id'})  # Example of renaming specific columns
    
    return df

    return data


@test
def test_output(output, *args) -> None:
    """
    Assertion
    """
    assert df['vendor_id'].isin([1, 2]).all(), "Vendor ID should be 1 or 2"
    assert (df['passenger_count'] > 0).all(), "Passenger count should be greater than 0"
    assert (df['trip_distance'] > 0).all(), "Trip distance should be greater than 0"

